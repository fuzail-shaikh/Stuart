<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/scheduleCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margins"
        android:layout_marginLeft="@dimen/card_margins"
        android:layout_marginRight="@dimen/card_margins"
        app:cardUseCompatPadding="true"
        app:contentPadding="12dp"
        app:cardBackgroundColor="@color/cardBackground">
        <RelativeLayout
            android:id="@+id/scheduleCardLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:text="10:30 AM \n11:30 AM"
                android:textSize="16sp"
                android:textColor="@color/cardSubTextColor"/>
            <TextView
                android:id="@+id/subjectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/time"
                android:text="Digital Marketing"
                android:textSize="24sp"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/subjectName"
                android:layout_toEndOf="@id/time"
                android:text="Lecture in B401 by Era Johri"
                android:textSize="16sp"
                android:textColor="@color/cardTextColor"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>