<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/chatCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margins"
        android:layout_marginLeft="@dimen/card_margins"
        android:layout_marginRight="@dimen/card_margins"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/cardBackground">

        <LinearLayout
            android:id="@+id/chatLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:maxWidth="250dp"
                android:scaleType="centerCrop"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:padding="10dp"
                android:text="Hi Stuart"
                android:textSize="16sp"
                android:textColor="@color/cardTextColor"/>
            <TextView
                android:id="@+id/fileOpenText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:padding="6dp"
                android:background="@color/colorPrimary"
                android:text="Click to view "
                android:textAlignment="center"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:visibility="gone"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
