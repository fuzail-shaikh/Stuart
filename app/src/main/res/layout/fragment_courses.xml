<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coursesLayout"
    tools:context="kjsce.stuart.Courses"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/card_margins"
                android:layout_marginLeft="@dimen/card_margins"
                android:layout_marginRight="@dimen/card_margins"
                app:cardUseCompatPadding="true"
                app:contentPadding="12dp"
                app:cardBackgroundColor="@color/cardBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cloud Computing"
                        android:textSize="24sp"
                        android:textColor="@color/cardTextColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purnima Ahirao"
                        android:textSize="16sp"
                        android:textColor="@color/cardSubTextColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 writeups"
                        android:textSize="16sp"
                        android:textColor="@color/cardSubTextColor"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/card_margins"
                android:layout_marginLeft="@dimen/card_margins"
                android:layout_marginRight="@dimen/card_margins"
                android:layout_below="@id/card1"
                app:cardUseCompatPadding="true"
                app:contentPadding="12dp"
                app:cardBackgroundColor="@color/cardBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Digital Marketing"
                        android:textSize="24sp"
                        android:textColor="@color/cardTextColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Era Johri"
                        android:textSize="16sp"
                        android:textColor="@color/cardSubTextColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 writeups"
                        android:textSize="16sp"
                        android:textColor="@color/cardSubTextColor"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/card_margins"
                android:layout_marginLeft="@dimen/card_margins"
                android:layout_marginRight="@dimen/card_margins"
                android:layout_below="@id/card2"
                app:cardUseCompatPadding="true"
                app:contentPadding="12dp"
                app:cardBackgroundColor="@color/cardBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Soft Computing"
                        android:textSize="24sp"
                        android:textColor="@color/cardTextColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sonali Patil"
                        android:textSize="16sp"
                        android:textColor="@color/cardSubTextColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 writeups"
                        android:textSize="16sp"
                        android:textColor="@color/cardSubTextColor"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/card_margins"
                android:layout_marginLeft="@dimen/card_margins"
                android:layout_marginRight="@dimen/card_margins"
                android:layout_below="@id/card3"
                app:cardUseCompatPadding="true"
                app:contentPadding="12dp"
                app:cardBackgroundColor="@color/cardBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Software Project Management"
                        android:textSize="24sp"
                        android:textColor="@color/cardTextColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khushi Khanchandani"
                        android:textSize="16sp"
                        android:textColor="@color/cardSubTextColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 writeups"
                        android:textSize="16sp"
                        android:textColor="@color/cardSubTextColor"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/card_margins"
                android:layout_marginLeft="@dimen/card_margins"
                android:layout_marginRight="@dimen/card_margins"
                android:layout_below="@id/card4"
                app:cardUseCompatPadding="true"
                app:contentPadding="12dp"
                app:cardBackgroundColor="@color/cardBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Internet of Things"
                        android:textSize="24sp"
                        android:textColor="@color/cardTextColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sagar Korde"
                        android:textSize="16sp"
                        android:textColor="@color/cardSubTextColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 writeups"
                        android:textSize="16sp"
                        android:textColor="@color/cardSubTextColor"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/card_margins"
                android:layout_marginLeft="@dimen/card_margins"
                android:layout_marginRight="@dimen/card_margins"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/card5"
                app:cardUseCompatPadding="true"
                app:contentPadding="12dp"
                app:cardBackgroundColor="@color/cardBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Digital Forensics"
                        android:textSize="24sp"
                        android:textColor="@color/cardTextColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avani Sakhapara"
                        android:textSize="16sp"
                        android:textColor="@color/cardSubTextColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 writeups"
                        android:textSize="16sp"
                        android:textColor="@color/cardSubTextColor"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"
        android:focusable="true"
        app:fabSize="normal"
        app:srcCompat="@mipmap/fab_icon" />

</RelativeLayout>


