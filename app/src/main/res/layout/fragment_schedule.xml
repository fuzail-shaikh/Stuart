<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scheduleLayout"
    tools:context="kjsce.stuart.Schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/upNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="@dimen/card_margins"
                android:layout_marginRight="@dimen/card_margins"
                android:text="UP NEXT"
                android:textSize="20sp"
                android:textColor="@color/cardSubTextColor"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/upNext"
                android:layout_marginTop="@dimen/card_margins"
                android:layout_marginLeft="@dimen/card_margins"
                android:layout_marginRight="@dimen/card_margins"
                app:cardUseCompatPadding="true"
                app:contentPadding="12dp"
                app:cardBackgroundColor="@color/cardBackground">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="8dp"
                        android:text="10:30 AM \n11:30 AM"
                        android:textSize="16sp"
                        android:textColor="@color/cardSubTextColor"/>
                    <TextView
                        android:id="@+id/sub1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/time1"
                        android:text="Digital Marketing"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/desc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sub1"
                        android:layout_toEndOf="@id/time1"
                        android:text="Lecture in B401\nEra Johri"
                        android:textSize="16sp"
                        android:textColor="@color/cardTextColor"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/card1"
                android:layout_marginTop="@dimen/card_margins"
                android:layout_marginLeft="@dimen/card_margins"
                android:layout_marginRight="@dimen/card_margins"
                app:cardUseCompatPadding="true"
                app:contentPadding="12dp"
                app:cardBackgroundColor="@color/cardBackground">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="8dp"
                        android:text="11:30 AM \n12:30 PM"
                        android:textSize="16sp"
                        android:textColor="@color/cardSubTextColor"/>
                    <TextView
                        android:id="@+id/sub2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/time2"
                        android:text="Software Project Management"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/desc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sub2"
                        android:layout_toEndOf="@id/time2"
                        android:text="Lecture in B401\nKhushi Khanchandani"
                        android:textSize="16sp"
                        android:textColor="@color/cardTextColor"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/card2"
                android:layout_marginTop="@dimen/card_margins"
                android:layout_marginLeft="@dimen/card_margins"
                android:layout_marginRight="@dimen/card_margins"
                app:cardUseCompatPadding="true"
                app:contentPadding="12dp"
                app:cardBackgroundColor="@color/cardBackground">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/time3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="8dp"
                        android:text="01:15 PM \n03:15 PM"
                        android:textSize="16sp"
                        android:textColor="@color/cardSubTextColor"/>
                    <TextView
                        android:id="@+id/sub3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/time3"
                        android:text="Software Project Management"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/desc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sub3"
                        android:layout_toEndOf="@id/time3"
                        android:text="Practical in B213\nAnupam Jain"
                        android:textSize="16sp"
                        android:textColor="@color/cardTextColor"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"
        android:focusable="true"
        app:fabSize="normal"
        app:srcCompat="@mipmap/fab_icon" />

</RelativeLayout>


