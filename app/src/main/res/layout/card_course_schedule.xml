<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/scheduleCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margins"
        android:layout_marginLeft="@dimen/card_margins"
        android:layout_marginRight="@dimen/card_margins"
        app:cardUseCompatPadding="true"
        app:contentPadding="12dp"
        app:cardBackgroundColor="@color/cardBackground">
        <RelativeLayout
            android:id="@+id/scheduleCardLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MONDAY"
                android:textColor="@color/cardSubTextColor"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_below="@id/day"
                android:text="10:30 AM
11:30 AM

11:30 AM
12:30 PM"
                android:textSize="16sp"
                android:textColor="@color/cardSubTextColor"/>

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/time"
                android:layout_toEndOf="@id/time"
                android:text="LECTURE in B401
Era Johri

LAB in B310
Era Johri"
                android:textSize="16sp"
                android:textColor="@color/cardTextColor"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>